{% extends "base.html.j2" %}

{% block title %}{{ title }}{% endblock %}

{% block heading %} {{ title }} {% endblock %}

{% block content %}
<style>
    .ratings-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    .ratings-table th,
    .ratings-table td {
        border: 1px solid #000;
        padding: 12px;
        text-align: center;
    }
    .ratings-table th {
        background-color: #000;
        color: #fff;
        font-weight: bold;
    }
    .ratings-table td.question-text {
        text-align: left;
        font-weight: normal;
        width: 50%;
    }
    .ratings-table tr:nth-child(even) {
        background-color: #f0f0f0;
    }
    .ratings-table input[type="radio"] {
        transform: scale(1.5);
    }
</style>

<div class="instructions"><p>{{ instructions|safe }}</p></div>
<form action="" method="post">
    <table class="ratings-table">
        <thead>
            <tr>
                <th></th>
                {% for option in options %}
                <th>{{ option.text }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for question in questions %}
            <tr>
                <td class="question-text">{{ question.text }}</td>
                {% for option in options %}
                <td>
                    <input type="radio" id="q{{ question.id }}_option{{ option.score }}" name="q{{ question.id }}" value="{{ option.score }}" required>
                </td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                {% for option in options %}
                <th>{{ option.text }}</th>
                {% endfor %}
            </tr>
        </tfoot>
    </table>
    <button type="submit" class="submit-button">Abschicken</button>
</form>
{% endblock %}